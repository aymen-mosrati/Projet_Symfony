{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<!--====== App Content ======-->
        <div class="app-content">

            <!--====== Section 1 ======-->
            <div class="u-s-p-y-60">

                <!--====== Section Content ======-->
                {# <div class="section__content">
                    <div class="container">
                        <div class="breadcrumb">
                            <div class="breadcrumb__wrap">
                                <ul class="breadcrumb__list">
                                    <li class="has-separator">

                                        <a href="index.html">Home</a></li>
                                    <li class="is-marked">

                                        <a href="signin.html">Signin</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--====== End - Section 1 ======--> #}


            <!--====== Section 2 ======-->
            <div class="u-s-p-b-60">

                <!--====== Section Intro ======-->
                <div class="section__intro u-s-m-b-60">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section__text-wrap">
                                    <h1 class="section__heading u-c-secondary">ALREADY REGISTERED?</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Intro ======-->


                <!--====== Section Content ======-->
                <div class="section__content">
                    <div class="container">
                        <div class="row row--center">
                            <div class="col-lg-6 col-md-8 u-s-m-b-30">
                                <div class="l-f-o">
                                    <div class="l-f-o__pad-box">
                                        {# <h1 class="gl-h1">I'M NEW CUSTOMER</h1>

                                        <span class="gl-text u-s-m-b-30">By creating an account with our store, you will be able to move through the checkout process faster, store shipping addresses, view and track your orders in your account and more.</span> #}
                                        <div class="u-s-m-b-15">
                                        <h1 class="gl-h1">SIGNIN</h1></div>
                                        <form method="post">

                                            <div class="u-s-m-b-30">

                                                <label class="gl-label" for="login-email">E-MAIL *</label>
                                                    <input type="email" value="{{ last_username }}" name="email" id="login-email" class="input-text " placeholder="Enter E-mail" autocomplete="email" required autofocus>
                                            </div>
                                            <div class="u-s-m-b-30">

                                                <label class="gl-label" for="login-password">PASSWORD *</label>
                                                <input type="password" name="password" id="login-password" class="input-text " placeholder="Enter Password" autocomplete="current-password" required>
                                                <input type="hidden" name="_csrf_token"
                                                     value="{{ csrf_token('authenticate') }}"
                                                >
                                               </div>
                                            <div class="gl-inline">
                                                <div class="u-s-m-b-30">
                                                    <button class="btn" style="background-color:#F44335;color:black" type="submit">LOGIN</button>  
                                                </div>
                      
                                            <div class="u-s-m-b-30">

                                                <!--====== Check Box ======-->
                                                <div class="check-box">

                                                    <input type="checkbox" id="remember-me">
                                                    <div class="check-box__state check-box__state--primary">
                                                        <label class="check-box__label" for="remember-me">Remember Me</label></div>
                                                    </div>
                                                <!--====== End - Check Box ======-->
                                            </div>
                                           
                                        </form>
                                        
                                    </div>
                                </div>
                                 <a class="btn" style="color:red" href="signup.html">CREATE AN ACCOUNT</a>
                            </div>
                        </div>
                    </div>
                </div>
                <!--====== End - Section Content ======-->
            </div>
            <!--====== End - Section 2 ======-->
        </div>
        <!--====== End - App Content ======-->

{% endblock %}
